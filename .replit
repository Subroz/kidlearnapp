modules = ["python-3.11"]

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Web Server"

[[workflows.workflow]]
name = "Flutter Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd build/web && python3 -m http.server 5000 --bind 0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
